<section class="TodoSection">
      <div class="TodoSectionTitle">
        <p class="TodoSectionTitle-text"><%=section_title%></p>
        <p class="TodoSectionTitle-remainingfraction"><%=todos.completed.count%>/<%=todos.count%></p>
      </div>
      <ul>
        <%todos.each do |todo|%>
          <li class='TodoItem'>
            <div class='TodoItem-Container'>

              <%if todo.completed%>
                <input class='TodoItem-checkbox' type="checkbox" checked>
                <del class='TodoItem-text'><%=todo.todo_text%></del>

              <%else%>
                <input class='TodoItem-checkbox' type="checkbox">
                <p class='TodoItem-text'><%=todo.todo_text%></p>
              <%end%>

              <%if show_duedate%>
                <p class='TodoItem-date'><%=todo.due_date.to_s(:short)%></p>
              <%end%>
              <img class="TodoItem-deleteIcon" src="./images/delete-icon.svg" alt="deleteicon">

            </div>
          </li>
        <%end%>

      </ul>
</section>
